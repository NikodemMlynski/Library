<Window x:Class="LibraryApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LibraryApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Background="#fdf9f5">
            <Image Width="223" 
Source="/Images/bookflow.png"/>
            <TextBlock Text="Welcome to BookFlow" Margin="0, 10, 0, 0" HorizontalAlignment="Center" FontSize="30px" FontWeight="Bold" Foreground="#0b2b45" />
            <Button Click="ContinueButtonClick" Content="Continue" FontSize="25px" Width="200px" Margin="0, 30, 0, 0" Padding="15, 6, 15, 6" Background="#45a7ff" FontWeight="SemiBold"></Button>
        </StackPanel>
    </Grid>
</Window>
